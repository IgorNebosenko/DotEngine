<UserControl x:Class="DotEngineEditor.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="25">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DotEngineEditor.Themes;component/MenuTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MenuBackgroundBrush}">
        <Menu Style="{StaticResource MainMenuStyle}">
            <MenuItem Header="File">
                <MenuItem Header="New Scene" Click="OnNewGameClick" InputGestureText="Ctrl+N"/>
                <MenuItem Header="Open Scene" Click="OnOpenGameClick" InputGestureText="Ctrl+O"/>
                <Separator/>
                <MenuItem Header="Save" Click="OnSaveClick" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save As..." Click="OnSaveAsClick" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="New Project" Click="OnNewProjectClick"/>
                <MenuItem Header="Open Project" Click="OnOpenProjectClick"/>
                <MenuItem Header="Save Project" Click="OnSaveProjectClick"/>
                <Separator/>
                <MenuItem Header="Build Profiles" Click="OnBuildProfilesClick" InputGestureText="Ctrl+Shift+B"/>
                <MenuItem Header="Build and Run" Click="OnBuildAndRunClick" InputGestureText="Ctrl+B"/>
                <Separator/>
                <MenuItem Header="Exit" Click="OnExitClick" InputGestureText="Alt+F4"/>
            </MenuItem>

            <MenuItem Header="Edit">
                <MenuItem Header="Undo" Click="OnUndoClick" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="Redo" Click="OnRedoClick" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="Select All" Click="OnSelectAllClick" InputGestureText="Ctrl+A"/>
                <MenuItem Header="Deselect All" Click="OnDeselectAllClick" InputGestureText="Shift+D"/>
                <MenuItem Header="Select Children" Click="OnSelectChildrenClick" InputGestureText="Shift+C"/>
                <MenuItem Header="Select Prefab Root" Click="OnSelectPrefabRootClick" InputGestureText="Ctrl+Shift+R"/>
                <MenuItem Header="Invert Selection" Click="OnInvertSelectionClick" InputGestureText="Ctrl+I"/>
                <Separator/>
                <MenuItem Header="Cut" Click="OnCutClick" InputGestureText="Ctrl+X"/>
                <MenuItem Header="Copy" Click="OnCopyClick" InputGestureText="Ctrl+C"/>
                <MenuItem Header="Paste" Click="OnPasteClick" InputGestureText="Ctrl+V"/>
                <MenuItem Header="Duplicate" Click="OnDuplicateClick" InputGestureText="Ctrl+D"/>
                <MenuItem Header="Rename" Click="OnRenameClick" InputGestureText="F2"/>
                <MenuItem Header="Delete" Click="OnDeleteClick" InputGestureText="Del"/>
                <Separator/>
                <MenuItem Header="Play" Click="OnPlayClick" InputGestureText="F5"/>
                <MenuItem Header="Pause" Click="OnPauseClick" InputGestureText="F6"/>
                <MenuItem Header="Step" Click="OnStepClick" InputGestureText="F7"/>
                <Separator/>
                <MenuItem Header="Project Settings" Click="OnProjectSettingsClick"/>
                <MenuItem Header="Preferences" Click="OnPreferencesClick"/>
                <MenuItem Header="Clear Player Data" Click="OnPlayerDataClearClick"/>
            </MenuItem>

            <MenuItem Header="Assets">
                <MenuItem Header="Create">
                    <MenuItem Header="Folder" Click="OnFolderCreateClick"/>
                    <MenuItem Header="Material" Click="OnMaterialCreateClick"/>
                    <Separator/>
                    <MenuItem Header="2D"/>
                    <MenuItem Header="Animation"/>
                    <MenuItem Header="Audio"/>
                    <MenuItem Header="Rendering"/>
                    <MenuItem Header="Scene"/>
                    <MenuItem Header="Scripting"/>
                    <MenuItem Header="Shader"/>
                    <MenuItem Header="VFX"/>
                </MenuItem>
                <MenuItem Header="Show in Explorer" Click="OnShowInExplorerClick"/>
                <MenuItem Header="Open" Click="OnOpenClick"/>
                <MenuItem Header="Delete" Click="OnDeleteClick"/>
                <MenuItem Header="Rename" Click="OnRenameClick"/>
                <MenuItem Header="Copy Path" Click="OnCopyPathClick"/>
                <Separator/>
                <MenuItem Header="Refresh" Click="OnRefreshClick"/>
                <Separator/>
                <MenuItem Header="Reimport All" Click="OnReimportAllClick"/>
                <Separator/>
                <MenuItem Header="Open C# Project" Click="OnOpenCSharpProjectClick"/>
            </MenuItem>

            <MenuItem Header="GameObject">
                <MenuItem Header="Create Empty" Click="OnCreateEmptyClick"/>
                <MenuItem Header="Create Empty Child" Click="OnCreateEmptyChildClick"/>
                <MenuItem Header="3D Primitives">
                    <MenuItem Header="Cube" Click="OnCreateCubeClick"/>
                    <MenuItem Header="Sphere" Click="OnCreateSphereClick"/>
                    <MenuItem Header="Capsule" Click="OnCreateCapsuleClick"/>
                    <MenuItem Header="Cylinder" Click="OnCreateCylinderClick"/>
                    <MenuItem Header="Pyramid" Click="OnCreatePyramidClick"/>
                    <MenuItem Header="Plane" Click="OnCreatePlaneClick"/>
                    <MenuItem Header="Quad" Click="OnCreateQuadClick"/>
                </MenuItem>
                <MenuItem Header="FX"/>
                <MenuItem Header="Light"/>
                <MenuItem Header="Audio"/>
                <MenuItem Header="Video"/>
                <MenuItem Header="UI"/>
                <MenuItem Header="Camera"/>
                <MenuItem Header="VFX"/>
                <Separator/>
                <MenuItem Header="Center In Children" Click="OnCenterInChildrenClick"/>
                <Separator/>
                <MenuItem Header="Make Parent" Click="OnMakeParentClick"/>
                <MenuItem Header="Clear Parent" Click="OnClearParentClick"/>
            </MenuItem>

            <MenuItem Header="Packages"/>
            
            <MenuItem Header="Window">
                <MenuItem Header="Swap theme" Click="OnSwapThemeClick"/>
                <Separator/>
                <MenuItem Header="Hierarchy" Click="OnHierarchyInstantiateClick"/>
                <MenuItem Header="Project" Click="OnProjectInstantiateClick"/>
                <MenuItem Header="Console" Click="OnConsoleInstantiateClick"/>
                <MenuItem Header="Inspector" Click="OnInspectorInstantiateClick"/>
                <MenuItem Header="Scene View" Click="OnSceneViewInstantiateClick"/>
                <MenuItem Header="Game" Click="OnGameInstantiateClick"/>
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="Documentation" Click="OnDocumentationClick"/>
                <MenuItem Header="About DotEngine" Click="OnAboutDotEngineClicked"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
