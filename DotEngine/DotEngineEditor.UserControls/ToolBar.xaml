<UserControl x:Class="DotEngineEditor.UserControls.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DotEngineEditor.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DotEngineEditor.Themes;component/ToolbarTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ToolBarTray>
        <ToolBar>
            <Button ToolTip="Hand" Click="LookHandClick" Margin="2">
                <Image Source="pack://application:,,,/DotEngineEditor;component/Resources/Look.png" Width="32" Height="32"/>
            </Button>
            <Button ToolTip="Move" Click="MoveObjectClick" Margin="2">
                <Image Source="pack://application:,,,/DotEngineEditor;component/Resources/Move.png" Width="32" Height="32"/>
            </Button>
            <Button ToolTip="Rotate" Click="RotateObjectClick" Margin="2">
                <Image Source="pack://application:,,,/DotEngineEditor;component/Resources/Rotate.png" Width="32" Height="32"/>
            </Button>
            <Button ToolTip="Scale" Click="ScaleObjectClick" Margin="2">
                <Image Source="pack://application:,,,/DotEngineEditor;component/Resources/Scale.png" Width="32" Height="32"/>
            </Button>
            <Separator/>
            <Button ToolTip="Help" Click="HelpClicked" Margin="2">
                <Image Source="pack://application:,,,/DotEngineEditor;component/Resources/Help.png" Width="32" Height="32"/>
            </Button>
            <Separator/>
            <Button ToolTip="Play" Click="PlayClicked" Margin="2">
                <Image Source="pack://application:,,,/DotEngineEditor;component/Resources/Play.png" Width="32" Height="32"/>
            </Button>
            <Button ToolTip="Pause" Click="PauseClicked" Margin="2">
                <Image Source="pack://application:,,,/DotEngineEditor;component/Resources/Pause.png" Width="32" Height="32"/>
            </Button>
            <Button ToolTip="Step" Click="StepClicked" Margin="2">
                <Image Source="pack://application:,,,/DotEngineEditor;component/Resources/Step.png" Width="32" Height="32"/>
            </Button>
        </ToolBar>
    </ToolBarTray>
</UserControl>
