<UserControl x:Class="DotEngineEditor.UserControls.HierarchyPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="220">
    <Border Background="{DynamicResource PanelBackgroundBrush}"
            BorderBrush="{DynamicResource PanelBorderBrush}"
            BorderThickness="1"
            CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border x:Name="PART_Header"
                    Background="{DynamicResource HeaderBackgroundBrush}">
                <TextBlock Text="Hierarchy"
                           Foreground="{DynamicResource HeaderForegroundBrush}"
                           Padding="5"
                           VerticalAlignment="Center"/>
            </Border>

            <TreeView Grid.Row="1"
                      Background="{DynamicResource TreeBackgroundBrush}"
                      Foreground="{DynamicResource TreeForegroundBrush}"
                      BorderThickness="0">
                <TreeViewItem Header="Scene">
                    <TreeViewItem Header="Main Camera"/>
                    <TreeViewItem Header="Directional Light"/>
                    <TreeViewItem Header="Game Objects">
                        <TreeViewItem Header="Cube"/>
                        <TreeViewItem Header="Sphere"/>
                    </TreeViewItem>
                </TreeViewItem>
            </TreeView>
        </Grid>
    </Border>
</UserControl>