<UserControl x:Class="DotEngineEditor.UserControls.InspectorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:inspectorItems="clr-namespace:DotEngineEditor.UserControls.InspectorItems"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="{DynamicResource PanelBackgroundBrush}"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{DynamicResource HeaderBackgroundBrush}"
                BorderBrush="{DynamicResource PanelBorderBrush}"
                BorderThickness="0,0,0,1">
            <TextBlock Text="Inspector"
                       VerticalAlignment="Center"
                       Padding="8,0"
                       Foreground="{DynamicResource ForegroundBrush}"
                       FontWeight="Bold"/>
        </Border>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Background="{DynamicResource PanelBackgroundBrush}">
            <StackPanel>

                <Expander Header="Game Object"
                          Foreground="{DynamicResource ForegroundBrush}"
                          Background="{DynamicResource HeaderBackgroundBrush}"
                          IsExpanded="True"
                          Margin="0,2,0,4">
                    <StackPanel Margin="10,10,10,5">
                        <TextBlock Text="Name"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   FontSize="10"/>
                        <TextBox Text="GameObject"
                                 Background="{DynamicResource InputBackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 BorderThickness="0"
                                 Margin="0,2,0,6"/>

                        <TextBlock Text="Tag"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   FontSize="10"/>
                        <TextBox Text="No Tag"
                                 Background="{DynamicResource InputBackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 BorderThickness="0"
                                 Margin="0,2,0,6"/>

                        <TextBlock Text="Layer"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   FontSize="10"/>
                        <ComboBox SelectedIndex="0"
                                  Margin="0,2,0,6"
                                  Background="{DynamicResource InputBackgroundBrush}"
                                  Foreground="{DynamicResource ForegroundBrush}"/>

                        <CheckBox Content="Is Static"
                                  Foreground="{DynamicResource ForegroundBrush}"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Transform"
                          Foreground="{DynamicResource ForegroundBrush}"
                          Background="{DynamicResource HeaderBackgroundBrush}"
                          IsExpanded="True"
                          Margin="0,2,0,4">
                    <StackPanel Margin="10,5">
                        <inspectorItems:Vector3Field Header="Position"
                                                     X="{Binding PositionX}"
                                                     Y="{Binding PositionY}"
                                                     Z="{Binding PositionZ}"/>
                        <Separator Margin="0,5"/>
                        <inspectorItems:Vector4Field Header="Rotation"
                                                     X="{Binding RotationX}"
                                                     Y="{Binding RotationY}"
                                                     Z="{Binding RotationZ}"
                                                     W="{Binding RotationW}"/>
                        <inspectorItems:Vector3Field Header="Euler Angles"
                                                     X="{Binding EulerX}"
                                                     Y="{Binding EulerY}"
                                                     Z="{Binding EulerZ}"/>
                        <Separator Margin="0,5"/>
                        <inspectorItems:Vector3Field Header="Scale"
                                                     X="{Binding ScaleX}"
                                                     Y="{Binding ScaleY}"
                                                     Z="{Binding ScaleZ}"/>
                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>