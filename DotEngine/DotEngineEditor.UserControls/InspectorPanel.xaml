<UserControl x:Class="DotEngineEditor.UserControls.InspectorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:inspectorItems="clr-namespace:DotEngineEditor.UserControls.InspectorItems"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="{DynamicResource PanelBackgroundBrush}"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{DynamicResource HeaderBackgroundBrush}"
                BorderBrush="{DynamicResource PanelBorderBrush}"
                BorderThickness="0,0,0,1">
            <TextBlock Text="Inspector"
                       VerticalAlignment="Center"
                       Padding="8,0"
                       Foreground="{DynamicResource ForegroundBrush}"
                       FontWeight="Bold"/>
        </Border>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Background="{DynamicResource PanelBackgroundBrush}">
            <StackPanel>

                <Expander Header="Game Object"
                          Foreground="{DynamicResource ForegroundBrush}"
                          Background="{DynamicResource HeaderBackgroundBrush}"
                          IsExpanded="True"
                          Margin="0,2,0,4">
                    <StackPanel Margin="10,10,10,5">
                        <TextBlock Text="Name"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   FontSize="10"/>
                        <TextBox Text="GameObject"
                                 Background="{DynamicResource InputBackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 BorderBrush="{DynamicResource InputBorderBrush}"
                                 BorderThickness="1"
                                 Padding="4,2"
                                 Margin="0,2,0,6"/>

                        <TextBlock Text="Tag"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   FontSize="10"/>
                        <TextBox Text="No Tag"
                                 Background="{DynamicResource InputBackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 BorderBrush="{DynamicResource InputBorderBrush}"
                                 BorderThickness="1"
                                 Padding="4,2"
                                 Margin="0,2,0,6"/>

                        <TextBlock Text="Layer"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   FontSize="10"/>
                        <ComboBox SelectedIndex="0"
                                  Margin="0,2,0,6"
                                  Background="{DynamicResource InputBackgroundBrush}"
                                  Foreground="{DynamicResource ForegroundBrush}"
                                  BorderBrush="{DynamicResource InputBorderBrush}"
                                  BorderThickness="1"
                                  Padding="4,2"/>

                        <CheckBox Content="Is Static"
                                  Foreground="{DynamicResource ForegroundBrush}"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Transform"
                          Foreground="{DynamicResource ForegroundBrush}"
                          Background="{DynamicResource HeaderBackgroundBrush}"
                          IsExpanded="True"
                          Margin="0,2,0,4">
                    <StackPanel Margin="10,5">
                        <inspectorItems:Vector3Field x:Name="PositionField" Header="Position"/>
                        <Separator Margin="0,5"/>
                        <inspectorItems:Vector4Field x:Name="RotationField" Header="Rotation"/>
                        <inspectorItems:Vector3Field x:Name="EulerAnglesField" Header="Euler Angles"/>
                        <Separator Margin="0,5"/>
                        <inspectorItems:Vector3Field x:Name="ScaleField" Header="Scale"
                                                     X="1"
                                                     Y="1"
                                                     Z="1"/>
                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
